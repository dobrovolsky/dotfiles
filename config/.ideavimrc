" https://stackoverflow.com/questions/27898407/intellij-idea-with-ideavim-cannot-copy-text-from-another-source
set clipboard+=unnamed

" enable vim-surround
set surround

" highlight matches with the last search pattern
set hlsearch


" disable keys to build new habits
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>